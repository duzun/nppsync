{
	"manifest_version" : 2,
	"name" : "NppSync",
	"version" : "1.3.0",
	"description" : "NppSync refreshes loaded local files when their source has been modified in notepad++.",
	"icons" : {
		"128" : "icon_128.png"
	},
	"page_action" : {
		"default_title" : "NppSync",
		"default_icon" : {
			"19" : "icon_19_disabled.png"
		}
	},
	"background" : {
		"scripts" : ["nppsync.js", "background.js"],
		"persistent": false
	},
	"options_page": "options.html",
	"permissions" : [
        "tabs",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*",
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://*.lh/*",
        "http://*.com/*",
        "file:///*"
    ]
}
